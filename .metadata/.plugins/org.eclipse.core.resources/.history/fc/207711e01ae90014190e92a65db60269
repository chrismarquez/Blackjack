import java.awt.Image;

import javax.swing.ImageIcon;


public class Naipe {
	
	private static final Image[] naipesImg = fillImage();
	private static final String[]  valores = fillValores();
	private int figura,
				valor;
	public static Image[] fillImage() {
		Image[] images = new Image[53];
		for(int i = 0; i < 4; i++) {
			for (int j = 0; j < 13; i++) {
				String route = "";
				switch (i) {
				case 0:
					route = "Cartas//Corazones//" + j + ".png";
					break;
				case 1:
					route = "Cartas//Diamantes//" + j + ".png"; 
					break;
				case 2:
					route = "Cartas//Picas//" + j + ".png";
					break;
				case 3:
					route = "Cartas//Trebol//" + j + ".png";
					break;
				default:
					break;
				}
				images[j + i*j] = new ImageIcon(route).getImage();
			}
		}
		images[52] = new ImageIcon("Cartas//Fondo_carta.png").getImage();
		return images;		
	}
	
	public static String[] fillValores() {
		String[] string = new String[13];
		String valor = "";
		for (int i = 0; i < 13; i++) {
			if (i == 0) {
				valor = "As";
			} else if (i > 0 && i < 10) {
				valor = "" + (i + 1);
			} else if (i == 10){
				valor = "Joto";
			} else if (i == 11) {
				valor = "Reina";
			} else {
				valor = "Rey";
			}
			
			string[i] = valor;
		}
		
		return string;
	}
	
	
	public String toString() {
		return "";
	}
	
	public Image getImage() {
		return null;
	}
	
	public int getValor(int valor) {
		if (valor > 0 && valor <= 10) {
			return valor + 1; //Cards between 2 and 10
		} else if (valor == 0) {
			return 11; //A
		} else {
			return 10; //J, K, Q
		}
	}
}
